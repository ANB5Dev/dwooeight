{
    "name": "intellishop/dwooeight",
    "license": "LGPL-3.0-only",
    "type": "library",
    "description": "Dwoo Eight is a PHP8 compatible fork of the dwoo template engine.",
    "authors": [
        {
            "name": "Michael DÃ¶hler",
            "email": "michael.doehler@intellishop.ag"
        }
    ],
    "autoload": {
        "psr-4": {
            "Dwoo\\": "lib/Dwoo/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dwoo\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "7.*|8.*"
    },
    "require-dev": {
        "phpunit/phpunit": "9.*",
        "squizlabs/php_codesniffer": "^3.6",
        "phpcompatibility/php-compatibility": "^9.3"
    },
    "scripts": {
        "sniffer:php80": "phpcs -p ./lib --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility --runtime-set testVersion 8.0",
        "sniffer:php81": "phpcs -p ./lib --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility --runtime-set testVersion 8.1"
    }
}
